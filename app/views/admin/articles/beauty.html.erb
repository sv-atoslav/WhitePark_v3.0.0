<div align= "center">
	<h2><%= @article.ru_title %></h2>
	<table  width="100%"><tbody><tr>
		<td width="50%">
			<% way = Photo.try_get_way_to_img_tag_by_id(@article.icon) %>
            <% if way.nil? %><%= $INE.html_safe %>
            <% else %><%= image_tag(way, style: "width: 100px;") %>
            <% end  %>
		</td>
		<td width="50%">
			<%= @article.description.html_safe %>
			<p class="article-date" align="right" vertical-align="bottom"><%= @article.published %></p>
		</td>
	</tr></tbody></table>
	<div align="left"><% @old_list.each do |one_photo_id| %>
		<% way = Photo.try_get_way_to_img_tag_by_id(one_photo_id) %>
        <% if way.nil? %><%= $INE.html_safe %>
        <% else %><%= image_tag(way, style: "height: 100px;") %>
        <% end  %>
	<% end %></div>
</div>

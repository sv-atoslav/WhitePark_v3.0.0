<%= form_with(model: [:admin, tent], local: true) do |form| %>
  <% if tent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tent.errors.count, "error") %> prohibited this tent from being saved:</h2>
      <ul><% tent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %></ul>
    </div>
  <% end %>
  <div class="field"><%= form.label :namesize %><%= form.text_field :namesize, id: :tent_namesize %></div>
  <div class="field"><%= form.label :description %><%= form.text_field :description, id: :tent_description, style: 'width: 50%;' %></div>
  <p>Icon</p>
  <div class="field"><% @photo_list.each do |one_photo| %>
    <br><%= image_tag( Photo.try_get_way_to_img_tag_by_photo(one_photo), style: 'width: 100px;') %>
    <%= form.radio_button(:icon, one_photo.id) %>
    <%= form.label(:icon, one_photo.description) %>
  <% end %></div>
  <div class="field"><%= form.number_field :min_size, id: :tent_min_size %><%=form.label :min_size %></div>
  <div class="field"><%= form.number_field :max_size, id: :tent_max_size %><%=form.label :max_size %></div>
  <div class="field"><%= form.number_field :hpb, id: :tent_hpb %><%= form.label :hpb , "Как много людей поместится на банкете" %></div>
  <div class="field"><%= form.number_field :hpf, id: :tent_hpf %><%= form.label :hpf , "Как много людей поместится на фуршете" %></div>
  <div class="actions"><%= form.submit %></div>
<% end %>

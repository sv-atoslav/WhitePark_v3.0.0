<p id="notice"><%= notice %></p>
<h1>Photos</h1>
<br><%= link_to 'New Photo', action: "new" %>
<% if @photos.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Preview</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @photos.each do |photo| %><tr>
    <% unless photo.avatar.exists? %>
      <td align="center"><%= $INE.html_safe %></td>
    <% else %>
      <td><%= image_tag(photo.avatar.url, style: "width: 100px;", alt: photo.description) %></td>
    <%  end %>
    <td><%= photo.avatar_file_name %></td>
    <td><%= photo.description %></td>
    <td><%= link_to 'Show',      admin_photo_path(photo) %></td>
    <td><%= link_to 'Edit', edit_admin_photo_path(photo) %></td>
    <td><%= link_to 'Destroy',   admin_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><%   end %></tbody>
</table><%  end %>
<hr>
<% @photos.each do |one_temp_photo| %>
  <br><%= one_temp_photo.avatar.file? %>
  <br><%= one_temp_photo.avatar.present? %>
  <br><%= one_temp_photo.avatar.exists?  %>
  <br><%= one_temp_photo.id %>
  <br><%= one_temp_photo.avatar.to_s %>
  <br><%= one_temp_photo.avatar.path %>
  <br><%= image_tag(one_temp_photo.avatar.url ) %>
  <% if one_temp_photo.id != 16 %>
    <br><%= image_tag(one_temp_photo.avatar.path) %>
  <% end %>
  <hr>
<% end %>
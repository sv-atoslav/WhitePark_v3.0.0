<p id="notice"><%= notice %></p>
<h1>Photos</h1>
<br><%= link_to 'New Photo', action: "new" %>
<% if @photo_list.first.nil? %>
  <i>эта таблица пустая</i>
<% else %><table class="sv_table">
  <thead><tr>
    <th>Preview</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody><% @photo_list.each do |photo| %><tr>
    <% unless photo.avatar? %>
      <td colspan="1" align="center"><%= $INE.html_safe %></td>
    <% else %>
      <td><%= image_tag(photo.avatar.url , style: "width: 100px;", alt: photo.description) %></td>
    <% end %>
    <td><%= photo.description %></td>
    <td><%= link_to 'Show',      admin_photo_path(photo) %></td>
    <td><%= link_to 'Edit', edit_admin_photo_path(photo) %></td>
    <td><%= link_to 'Destroy',   admin_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr><% end %></tbody>
</table><% end %>
<br><%= link_to 'New Photo', action: "new" %>

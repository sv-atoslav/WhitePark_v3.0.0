<%= form_with(model: [:admin, photo_in_event], local: true) do |form| %>
  <% if photo_in_event.errors.any? %><div id="error_explanation">
    <h2><%= pluralize(photo_in_event.errors.count, "error") %> prohibited this photo_in_event from being saved:</h2>
    <ul><% photo_in_event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %></ul>
  </div><% end %>
  <p>Photo</p>
  <div  class="field"><% @photo_list.each do |one_photo| %>
    <% variant_of_img = Photo.try_get_way_to_img_tag_by_photo(one_photo) %>
    <% variant_of_img = "lost.jpg" if variant_of_img.nil? %>
    <%= image_tag variant_of_img, width: "100px" %>
    <%= form.radio_button(:photo, one_photo.id)  %>
    <%= form.label(:photo, variant_of_img) %><br>
  <%end %></div>
  <div  class="field"><%= form.label :event %><%= form.collection_select(:event, Event.all, :id, :title) %></div>
  <div class="actions"><%= form.submit %></div>
<% end %>
